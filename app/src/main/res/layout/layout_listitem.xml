<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:backgroundTint="#fff"
    android:layout_centerHorizontal="true"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    cardBackgroundColor="@color/cardview_light_background"
    cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:backgroundTint="#FFFFFF">

        <ImageView
            android:id="@+id/dog_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <LinearLayout
            android:layout_width="164dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dog_nickname"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/dog_photo"
                android:layout_weight="1"
                android:textAlignment="viewStart"
                android:textColor="#DE781F"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dog_size"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_nickname"
                android:layout_toRightOf="@+id/dog_photo"
                android:layout_weight="1"
                android:textColor="#424242"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dog_sex"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_size"
                android:layout_toRightOf="@+id/dog_photo"
                android:layout_weight="1"
                android:textColor="#424242"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dog_local"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_sex"
                android:layout_toRightOf="@+id/dog_photo"
                android:layout_weight="1"
                android:textColor="#424242"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <ImageButton
            android:id="@+id/iconEdit"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:background="#FFF"
            app:srcCompat="@drawable/ic_edit_black_24dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>